<div class="content">
  <h1>Shopping list</h1>
  <h4>Best price:</h4>
<ul class="list-green">
  <% @selections.each do |s| %>
    <li><%= @products.find(s[:product_id]).name %> | <%= @stores.find(s[:store_id]).name %> | <%= s[:price] %></li>
  <% end %>
</ul>

<%= form_tag '/confirm' do %>
  <% @product_ids.each_with_index do |product_id, index|%>
      <%= hidden_field_tag "products[]", product_id %>
      <%= hidden_field_tag "quanities[]", @quanities[index] %>
      <%= hidden_field_tag "prices[]", @selections[index][:price] %>
  <% end %>
  <p><%= submit_tag "Confirm & Checkout" %></p>
  <p><%= link_to "Back", :back %></p>

<% end %>
</div>
